<% include partials/header.ejs %>

<div class="container">
  <header class ="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View the best campgrounds picked by the people you know</p>
      <p><button  class="btn btn-primary btn-large">Add new Campround<a href="/grounds/new"> </a></button></p>
    </div>
  </header>
  <div class= "row">
    <div class="col-lg-12">
      <h3 >Top Campgrounds</h3>
    </div>
  </div>

  <div class ='row text-center' style:'display:flex; flex-wrap: wrap;'>
    <%  grounds.forEach(function(ground){ %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src=<%= ground.image %> alt="something" >
            <div class="caption">
              <h4><%= ground.name %></h4>
            </div>
          </div>
        </div>

    <%  }); %>
  </div>


</div>
