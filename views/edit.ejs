<% include partials/header.ejs %>

<div class="Container">
  <div class="row">
    <h2 class="text-center">Add a new campground </h2>
    <form method="POST" action="/grounds/<%=campground._id%>?_method=PUT">
      <div style="width:30%; margin :30px auto;">
        <div class="form-group">
          <input class ="form-control" type ="text" name="ground[name]" placeholder="name" value=<%=campground.name %>></input>
        </div>
        <div class="form-group">
          <input  class ="form-control" type ="text" name="ground[image]" placeholder="image " value=<%=campground.image%>></input>
        </div>
        <div class="form-group">
          <textarea class="form-control" rows="3" name="ground[desc]" placeholder="description"><%=campground.desc%></textarea>
        </div>
        <div class="form-group">
          <button  type="submit" name="button" class="btn btn-primary btn-lg btn-block">Add</button>
        </div>
      </div>
    </form>
 </div>
</div



